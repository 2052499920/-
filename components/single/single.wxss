.box{
  background-color: #ffffff;
}
.palys{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 30rpx;
  border-bottom: 2rpx solid #f7f7f7;
}
.paly{
  display: flex;
  align-items: center;
}
.img{
  width: 45rpx;
  height: 45rpx;
  margin-top: 10rpx;
}
.playText{
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
/* 内容 */
.song {
  padding: 0 30rpx;
  border-bottom: 2rpx solid #F7F7F7;
  position: relative;
}

.songName {
  font-size: 28rpx;
  padding: 10rpx 0;
  color: #000000;
}

.author {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999999;
  padding: 10rpx 0;
}

.sing {
  font-size: 20rpx;
  padding: 2rpx 14rpx;
  border-radius: 30rpx;
  border: 2rpx solid;
  position: absolute;
  right: 60rpx;
  top: 20rpx;
  border: 2rpx solid #62BCFA;
  background: linear-gradient(to right, #FA6FD8, #62BCFA);
  -webkit-background-clip: text;
  color: transparent;
}

.push {
  position: absolute;
  right: 0;
  top: 26rpx;
}

.push>image {
  width: 40rpx;
  height: 40rpx;
}
.songAlls{
  padding: 10rpx 0;
}